<Window x:Class="BankingApp.Views.TransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction History" Height="550" Width="750"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{StaticResource BackgroundBrush}">
    <Border CornerRadius="12" Background="White" Margin="20">
        <Border.Effect>
            <DropShadowEffect Color="#E2E8F0" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" x:Name="AccountInfoTextBlock" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>

            <ListView Grid.Row="1" x:Name="TransactionsListView" Margin="0,0,0,20" BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Date" Width="180" DisplayMemberBinding="{Binding Date, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"/>
                        <GridViewColumn Header="Description" Width="300" DisplayMemberBinding="{Binding Description}"/>
                        <GridViewColumn Header="Amount" Width="150" DisplayMemberBinding="{Binding Amount, StringFormat='{}{0:F2}'}"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Grid.Row="2" Content="Close" Width="120" Height="40" HorizontalAlignment="Center" Click="Close_Click"/>
        </Grid>
    </Border>
</Window>
