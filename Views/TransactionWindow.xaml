<Window x:Class="BankingApp.Views.TransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction History" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" x:Name="AccountInfoTextBlock" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListView Grid.Row="1" x:Name="TransactionsListView" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" Width="150" DisplayMemberBinding="{Binding Date, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"/>
                    <GridViewColumn Header="Description" Width="250" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Amount" Width="150" DisplayMemberBinding="{Binding Amount, StringFormat='{}{0:F2}'}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Row="2" Content="Close" Width="100" Height="30" HorizontalAlignment="Center" Click="Close_Click"/>
    </Grid>
</Window>
