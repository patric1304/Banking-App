<Window x:Class="BankingApp.Views.TransactionsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaction History" Height="400" Width="600" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Name="AccountInfoLabel" FontSize="14" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock Name="BalanceLabel" FontSize="12" Foreground="Gray"/>
        </StackPanel>

        <ListView Name="TransactionsListView" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Date" Width="150" DisplayMemberBinding="{Binding Date, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}"/>
                    <GridViewColumn Header="Description" Width="250" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Amount" Width="120" DisplayMemberBinding="{Binding Amount, StringFormat={}{0:F2}}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <Button Grid.Row="2" Content="Close" Width="80" Height="30" Margin="0,10,0,0" HorizontalAlignment="Right" Click="OnCloseClick"/>
    </Grid>
</Window>
