<Window x:Class="BankingApp.Views.AccountView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account Management" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock FontSize="24" FontWeight="Bold" Text="Account Details" Margin="0,0,0,20"/>
            <TextBlock Text="Account Holder:" FontWeight="Bold"/>
            <TextBox Text="{Binding AccountHolder}" IsReadOnly="True" Margin="0,0,0,10"/>
            
            <TextBlock Text="IBAN:" FontWeight="Bold"/>
            <TextBox Text="{Binding Iban}" IsReadOnly="True" Margin="0,0,0,10"/>
            
            <TextBlock Text="Account Type:" FontWeight="Bold"/>
            <TextBox Text="{Binding AccountType}" IsReadOnly="True" Margin="0,0,0,10"/>
            
            <TextBlock Text="Currency:" FontWeight="Bold"/>
            <TextBox Text="{Binding AccountCurrency}" IsReadOnly="True" Margin="0,0,0,10"/>
            
            <TextBlock Text="Balance:" FontWeight="Bold"/>
            <TextBox Text="{Binding Amount, StringFormat='{}{0:C}'}" IsReadOnly="True" Margin="0,0,0,20"/>
            
            <Button Content="Deposit" Command="{Binding DepositCommand}" Width="100" Margin="0,0,0,10"/>
            <Button Content="Withdraw" Command="{Binding WithdrawCommand}" Width="100" Margin="0,0,0,10"/>
            <Button Content="Change Currency" Command="{Binding ChangeCurrencyCommand}" Width="150" Margin="0,0,0,10"/>
            
            <TextBlock Text="Transaction History:" FontWeight="Bold" Margin="0,20,0,10"/>
            <ListView ItemsSource="{Binding Transactions}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Date}" Width="120"/>
                            <TextBlock Text="{Binding Description}" Width="200"/>
                            <TextBlock Text="{Binding Amount, StringFormat='{}{0:C}'}" Width="100"/>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>