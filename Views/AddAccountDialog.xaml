<Window x:Class="BankingApp.Views.AddAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Account" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    <Border CornerRadius="12" Background="White" Margin="15">
        <Border.Effect>
            <DropShadowEffect Color="#E2E8F0" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Bank Name:" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBox Grid.Row="1" x:Name="BankNameTextBox" Margin="0,0,0,20"/>

            <TextBlock Grid.Row="2" Text="Account Holder:" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <TextBox Grid.Row="3" x:Name="AccountHolderTextBox" Margin="0,0,0,20"/>

            <TextBlock Grid.Row="4" Text="Account Type:" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <ComboBox Grid.Row="5" x:Name="AccountTypeComboBox" Margin="0,0,0,20"/>

            <TextBlock Grid.Row="6" Text="Currency:" FontWeight="SemiBold" Margin="0,0,0,8"/>
            <ComboBox Grid.Row="7" x:Name="CurrencyComboBox" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Create Account" Width="140" Height="40" Click="OK_Click" Margin="0,0,10,0"/>
                <Button Content="Cancel" Width="100" Height="40" Click="Cancel_Click" Style="{StaticResource SecondaryButton}" Margin="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
