<Window x:Class="BankingApp.Views.AddAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Account" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Bank Name:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="BankNameTextBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" Height="25"/>

        <TextBlock Text="Account Holder:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="AccountHolderTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" Height="25"/>

        <TextBlock Text="Account Type:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="AccountTypeComboBox" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" Height="25"/>

        <TextBlock Text="Currency:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center"/>
        <ComboBox x:Name="CurrencyComboBox" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10" Height="25"/>

        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="OK" Width="80" Height="30" Margin="0,0,10,0" Click="OK_Click"/>
            <Button Content="Cancel" Width="80" Height="30" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
