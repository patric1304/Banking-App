<Window x:Class="BankingApp.Views.TransferDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transfer Money" Height="600" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundBrush}">
    <Border CornerRadius="12" Background="White" Margin="15">
        <Border.Effect>
            <DropShadowEffect Color="#E2E8F0" BlurRadius="20" ShadowDepth="5" Opacity="0.4"/>
        </Border.Effect>
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="From Account" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
            <TextBox Grid.Row="1" x:Name="FromAccountTextBox" IsReadOnly="True" Background="#F0F0F0" 
                     FontSize="13" Padding="10" Margin="0,0,0,20"/>

            <TextBlock Grid.Row="2" Text="To Account" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
            <ComboBox Grid.Row="3" x:Name="ToAccountComboBox" DisplayMemberPath="Iban" 
                      FontSize="13" Padding="10" Margin="0,0,0,20"/>

            <TextBlock Grid.Row="4" Text="Amount" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>
            <TextBox Grid.Row="5" x:Name="AmountTextBox" FontSize="18" Padding="10" Margin="0,0,0,20"/>

            <Border Grid.Row="6" Background="#FFF3CD" BorderBrush="#FFC107" BorderThickness="1" 
                    Padding="12" CornerRadius="5" Margin="0,0,0,25">
                <TextBlock TextWrapping="Wrap" FontSize="12" Foreground="#856404" LineHeight="18">
                    ⚠️ Processing time: 1-10 seconds for same bank, 11-20 seconds for different banks
                </TextBlock>
            </Border>

            <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="OkButton" Content="Confirm" Width="120" Height="40" Click="OK_Click" Margin="0,0,10,0"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="100" Height="40" Click="Cancel_Click" 
                        Style="{StaticResource SecondaryButton}" Margin="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
