<Window x:Class="BankingApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Banking System" Height="500" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Banking System" FontSize="24" FontWeight="Bold" 
                   Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <!-- Account List -->
        <GroupBox Grid.Row="1" Header="Accounts" Margin="0,0,0,10">
            <ListView Name="AccountsListView" SelectionMode="Single">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Account Holder" Width="150" DisplayMemberBinding="{Binding AccountHolder}"/>
                        <GridViewColumn Header="IBAN" Width="150" DisplayMemberBinding="{Binding Iban}"/>
                        <GridViewColumn Header="Type" Width="100" DisplayMemberBinding="{Binding AccountType}"/>
                        <GridViewColumn Header="Currency" Width="80" DisplayMemberBinding="{Binding AccountCurrency}"/>
                        <GridViewColumn Header="Balance" Width="100" DisplayMemberBinding="{Binding Amount}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </GroupBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Create Account" Width="120" Height="30" Margin="5" Click="CreateAccount_Click"/>
            <Button Content="Deposit" Width="100" Height="30" Margin="5" Click="Deposit_Click"/>
            <Button Content="Withdraw" Width="100" Height="30" Margin="5" Click="Withdraw_Click"/>
            <Button Content="Change Currency" Width="130" Height="30" Margin="5" Click="ChangeCurrency_Click"/>
            <Button Content="View Transactions" Width="140" Height="30" Margin="5" Click="ViewTransactions_Click"/>
            <Button Content="Delete Account" Width="120" Height="30" Margin="5" Click="DeleteAccount_Click"/>
        </StackPanel>
    </Grid>
</Window>